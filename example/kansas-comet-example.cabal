         base                   >= 4.6          && < 5,
         kansas-comet           == 0.2,
         aeson                  >= 0.6.1        && < 0.7,
         scotty                 >= 0.7.2        && < 0.8,
         containers             == 0.5.*,
         data-default           == 0.5.*,
         semigroups             >= 0.13,
         stm                    >= 2.4.2        && < 2.5,
         text                   >= 0.11.2.3,
         transformers           == 0.3.*,
         wai-middleware-static  >= 0.5.0        && < 0.6
          
    Main-is: Main.hs
    Hs-Source-Dirs: .
    Ghc-Options: -threaded
    default-language:    Haskell2010


