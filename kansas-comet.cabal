                       aeson            >= 0.5,
                       containers       == 0.4.*,
                       data-default     == 0.4.*,
                       scotty           >= 0.4.2 && < 0.5,
                       stm              == 2.2.*,
                       transformers     == 0.2.*,
                       text             == 0.11.*

